
<div class="container">

    <div class="row">
     <div class="col-md-8 offset-md-2 mt-4 pl-5">
      <%= form_with model:  [:admin, @camp_place], local:true do |f| %>
        <div class="form-group">
          <%= f.label :キャンプ場の写真 %>
          <%= f.attachment_field :image, class: "form-control-file user_image" %>
        </div>
        <div class="form-group">
          <%= f.label :キャンプ場 %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :キャンプ場紹介 %>
          <%= f.text_area :introduction, class: "form-control introduction", size: "80x6" %>
        </div>
        <div class="form-group text-center mt-5">
          <%= f.submit "編集する", class: 'glyphicon glyphicon-home btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>

 </div>