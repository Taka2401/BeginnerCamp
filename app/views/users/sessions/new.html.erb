<div class="container">
  <div class="col-12">
   <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|%>
   <div class="col-md-6 offset-md-3 mt-5">
     <div class="row offset-md-4">
       <strong><%= f.label :メールアドレス %></strong>
     </div>
     <div class="row mt-3">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form"  %>
     </div>
   </div>
   <div class="col-md-6 offset-md-3 mt-4">
     <div class="row col-md-7 offset-md-4">
       <strong><%= f.label :パスワード %></strong>
     </div>
     <div class="row mt-3">
       <%= f.password_field :password, autocomplete: "current_password", class: "login-form" %>
     </div>
   </div>
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3">
        <%= f.submit "ログイン", class: "login-form glyphicon glyphicon-home btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-md-6 offset-md-3">
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post,  class: "login-form glyphicon glyphicon-home btn btn-success" %>
      </div>
    </div>
  </div>
</div>













