<div class="user-post">
  <% post.each do |post| %>
    <div class="row mt-5">
      <div class="col-md-5 text-center">
        <%= link_to  post_path(post.id) do %>
          <%= attachment_image_tag post, :image, format: 'jpeg', size: "100x100", class: "rounded" %>
        <% end %>
      </div>
      <div class="col-md-6 ml-5">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><p>タイトル</p><%= post.title %></td>
            </tr>
            <tr>
              <td id="favorites_buttons_<%= post.id %>">
                <%= render partial: 'favorites/favorite', locals: {post: post} %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
  <div class="col-12 mt-5 offset-md-4">
    <%= paginate post, theme: 'twitter-bootstrap-4' %>
  </div>
</div>