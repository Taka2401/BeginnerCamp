<div class="user-post">
  <div class="d-flex flex-wrap mt-5">
    <% posts.each do |post| %>
      <div class="mypage-post-inner">
        <%= link_to  post_path(post.id) do %>
          <%= attachment_image_tag post, :image, format: 'jpeg', size: "150x150", class: "rounded" %>
        <% end %><br />
        <div class="mypage-post-title mt-2">
          <%= post.title %>
        </div>
        <div class="row mypage-post-active">
          <i class="far fa-comment-dots mypage-comment-active"><%= post.post_comments.count %></i>
          <div id="favorites_buttons_<%= post.id %>">
            <%= render partial: 'favorites/favorite', locals: {post: post} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12 mt-5 offset-md-4">
    <%= paginate posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>