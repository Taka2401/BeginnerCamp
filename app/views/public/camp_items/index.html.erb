<div class="container">
  <div class="row">
    <div class="all-content-inner mt-5">
      <div class="col-12 mt-2">
        <h3>キャンプ用品一覧</h3>
      </div>
      <% @camp_items.first(3).each do |camp_item| %>
        <div class="d-flex flex-wrap mt-4 ml-2">
          <div class="col-12 camp__image">
            <%= link_to camp_item_path(camp_item), class: "link-color" do %>
              <%= attachment_image_tag(camp_item, :image, format: 'jpeg', size: "200x200", class: "rounded") %> <br />
              <div class="col-12">
                <%= camp_item.name %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="col-12 mt-4 offset-md-5">
        <%= paginate @camp_items, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>

