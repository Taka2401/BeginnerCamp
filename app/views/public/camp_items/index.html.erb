
<div class="container">
  <div class="row mt-5">
    <div class="col-lg-12 mt-2">
      <h3>キャンプ用品一覧</h3>
    </div>
    <div class="d-flex flex-wrap mt-4">
      <% @camp_items.first(3).each do |camp_item| %>
        <div class="col-lg-4 camp__image">
          <%= link_to camp_item_path(camp_item), style: "color: #494848;" do %>
            <%= attachment_image_tag(camp_item, :image, :fill, 200, 200, format: 'jpeg', class: "rounded") %> <br />
            <div class="col-md-12">
              <%= camp_item.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
