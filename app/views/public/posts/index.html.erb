<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-2">
      <h3><i class="fas fa-feather-alt"></i> みんなのキャンプ</h3>
    </div>
    <div class="col-md-2">
      <%= link_to new_post_path do %>
        <i class="far fa-edit fa-3x post_btn"></i>
      <% end %>
    </div>
  </div>
  <% @posts.includes([:favorites]).each do |post| %>
    <div class="row mt-5">
        <div class="col-md-3 offset-md-1">
         <%= link_to  post_path(post.id) do %>
           <%= attachment_image_tag post, :image, format: 'jpeg', size: "180x180"  %>
         <% end %>
        </div>
      <div class="col-6">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td></td>
              <td><p>タイトル</p><%= post.title %></td>
            </tr>
            <tr>
              <td></td>
                <td id="favorites_buttons_<%= post.id %>">
                 <%= render partial: 'favorites/favorite', locals: {post: post} %>
                </td>
            </tr>
            <tr>
              <td></td>
                <td id="comment_buttons_<%= post.id %>">
                 コメント件数：<%= post.post_comments.count %>
                </td>
              </td>
            </tr>
          </tbody>
        </table>
       </div>
      </div>
   <% end %>
  <div class="col-12 mt-4 offset-md-5">
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>






