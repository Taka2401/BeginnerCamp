<div class="container">
  <div class="row">
    <div class="all-post-inner">
      <div class="col-md-7 offset-md-2 mt-5">
        <h3><strong><i class="fas fa-feather-alt"></i> みんなのキャンプ</strong></h3>
      </div>
      <div class="col-md-2 mt-5">
        <%= link_to new_post_path do %>
          <i class="far fa-edit fa-3x post-btn"></i>
        <% end %>
      </div>
      <%= render 'shared/active_posts', posts: @posts %>
      <div class="col-7 mt-4 paginate">
        <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>






