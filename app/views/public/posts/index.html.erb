<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-2 mt-4">
      <h3><i class="fas fa-feather-alt"></i> みんなのキャンプ</h3>
    </div>
    <div class="col-md-3 mt-4">
      <%= link_to new_post_path do %>
        <i class="far fa-edit fa-3x post-btn"></i>
      <% end %>
    </div>
  </div>
  <div class="d-flex flex-wrap mt-5">
    <% @posts.includes([:favorites]).each do |post| %>
      <div class="post-inner">
        <%= link_to  post_path(post.id) do %>
          <%= attachment_image_tag post, :image, format: 'jpeg', size: "170x170", class: "rounded" %>
        <% end %>
        <div class="col-12 text-center mt-1">
          <%= post.title %>
        </div>
        <div class="row post-active">
          <i class="far fa-comment-dots comment-active"><%= post.post_comments.count %></i>
          <div id="favorites_buttons_<%= post.id %>">
            <%= render partial: 'favorites/favorite', locals: {post: post} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12 mt-4 offset-md-5">
    <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>






