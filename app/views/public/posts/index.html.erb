<div class="container">
  <div class="row">
    <div class="all-post-inner">
      <div class="col-md-7 offset-md-2 mt-5">
        <h3><strong><i class="fas fa-feather-alt"></i> みんなのキャンプ</strong></h3>
      </div>
      <div class="col-md-2 mt-5">
        <%= link_to new_post_path do %>
          <i class="far fa-edit fa-3x post-btn"></i>
        <% end %>
      </div>
      <div class="d-flex flex-wrap mt-5">
        <% @posts.includes([:favorites]).each do |post| %>
          <div class="post-inner offset-md-1 mt-5">
            <%= link_to  post_path(post.id) do %>
              <%= attachment_image_tag post, :image, format: 'jpeg', size: "180x180", class: "rounded" %>
            <% end %>
            <div class="post-title col-12 mt-2">
              <%= post.title %>
            </div>
            <div class="row post-active">
              <i class="far fa-comment-dots comment-active"><%= post.post_comments.count %></i>
              <div id="favorites_buttons_<%= post.id %>">
                <%= render partial: 'public/favorites/favorite', locals: {post: post} %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-12 mt-4 offset-md-5">
        <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>






