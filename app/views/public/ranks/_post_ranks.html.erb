  <div class="row">
    <div class="rank-inner">
      <div class="row">
        <div class="col-12">
          <h3 class="rank-title"><strong><i class="fas fa-feather-alt"></i> みんなのキャンプ投稿TOP3</strong></h3>
        </div>
        <% post_ranks.first(3).each.with_index(1) do |post, i| %>
          <div class="d-flex flex-wrap mt-4 ml-4">
            <div class="col-12 mt-3">
              <H3>第<%= i %>位</H3>
            </div>
            <div class="col-12 mt-3">
              <%= render 'shared/posts', post: post %>
            </div>
          </div>
        <% end %>
        <div class="col-md-5 offset-md-9 mt-4">
         <%= link_to "みんなの投稿を見る>>", posts_path, class: "link-color" %>
        </div>
      </div>
    </div>
  </div>