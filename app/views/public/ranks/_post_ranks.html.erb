  <div class="row">
    <div class="rank-inner">
      <div class="row">
        <div class="col-12">
          <h3 class="rank-title"><strong><i class="fas fa-feather-alt"></i> みんなのキャンプ投稿TOP3</strong></h3>
        </div>
        <% post_ranks.first(3).each.with_index(1) do |post, i| %>
          <div class="d-flex flex-wrap mt-4 ml-4">
            <div class="col-12">
              <H3>第<%= i %>位</H3>
            </div>
            <div class="col-12">
              <%= link_to post_path(post), class: "link-color" do %>
                <%= attachment_image_tag(post, :image, format: 'jpeg', size: "200x200", class: "rounded") %>
                <div class="row">
                  <div class="post-title mt-2 ml-4">
                    <%= post.title %>
                  </div>
                  <div id="favorites_buttons_<%= post.id %>", class="mt-1">
                    <%= render partial: 'public/favorites/favorite', locals: {post: post} %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="col-md-5 offset-md-9 mt-3">
         <%= link_to "みんなの投稿を見る>>", posts_path, class: "link-color" %>
        </div>
      </div>
    </div>
  </div>