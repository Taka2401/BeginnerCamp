  <div class="row mt-5">
    <div class="rank-inner">
      <div class="row">
        <div class="col-12">
          <h3 class="rank-title"><strong><i class="fab fa-firefox"></i> 人気のキャンプ場TOP3</strong></h3>
        </div>
        <% camp_place_ranks.first(3).each.with_index(1) do |camp_place, i| %>
          <div class="d-flex flex-wrap ml-4">
            <div class="col-10 mt-4 ml-2">
              <H3>第<%= i %>位</H3>
            </div>
            <%= render 'shared/camp_places', camp_place: camp_place %>
          </div>
        <% end %>
        <div class="col-md-11 mt-4 ml-5">
         <%= link_to "キャンプ場一覧を見る>>", camp_places_path, class: "float-right link-color" %>
        </div>
      </div>
    </div>
  </div>
