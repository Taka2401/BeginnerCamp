<div class="col-12">
  <%= form_with(model:[post, post_comment], remote: true) do |f| %>
    <%= f.text_area :comment, rows:'5', placeholder: "コメントをここに", :size =>'55x4', class: "comment-form" %>
    <div class="new-comment float-right">
      <%= f.submit "送信する" %>
    </div>
  <% end %>
</div>
<div id="favorites_buttons_<%= post.id %>" class="ml-3">
  <%= render partial: 'public/favorites/favorite', locals: {post: post} %>
</div>
<% post.post_comments.each do |post_comment| %>
  <div class="row post-comment mt-4">
    <div class="col-md-2 ml-4 comment-user">
      <%= link_to  user_path(post.user), class: "link-color" do %>
        <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 50, 50, fallback: "user_image.jpg", size:'50x50', class: "user-image") %><br />
        <%= post_comment.user.name %>
      <% end %>
    </div>
    <div class="col-md-8 mt-3 comment">
      <%= post_comment.comment %>
      <div class="float-right">
        <% if post_comment.user == current_user %>
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: 'btn btn-sm btn-danger' %><br>
        <% end %>
      </div>
    </div>
  </div>
<% end %>