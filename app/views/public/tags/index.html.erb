<div class="container">
  <div class="row">
    <div class="all-content-inner mt-5">
      <% @tags.each do |tag| %>
        <div class="d-flex flex-wrap tag-box mt-3">
          <div class="col-12">
            <%= link_to tag_path(tag.id) do %>
              <i class="fas fa-hashtag"></i> <%= tag.name %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="col-12 mt-4 offset-md-5">
        <%= paginate @tags, theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>
