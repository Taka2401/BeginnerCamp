<div class="col-12 mt-2">
  <h3><i class="fab fa-firefox"></i> キャンプ場一覧</h3>
</div>
  <% camp_places.first(3).each do |camp_place| %>
    <div class="d-flex flex-wrap mt-2">
      <% camp_place.post_images.first(1).each  do |post_image| %>
        <div class="col-12">
          <%= link_to camp_place_path(camp_place), style: "color: #494848;" do %>
            <%= attachment_image_tag(post_image, :image, :fill, 180, 180, format: 'jpeg', class: "rounded") %> <br />
            <div class="col-12 text-center">
              <%= camp_place.name %>
            </div>
          <div class="row col-12 offset-md-1" id="star-rate1-<%= camp_place.id %>"></div>
          <script>
          $('#star-rate1-<%= camp_place.id %>').raty({
            size: 30,
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            half: true,
            readOnly: true,
            score: "<%= camp_place.camp_place_values.average(:rate).to_f.round(1) %>",
          });
          </script>
        </div>
      </div>
    <% end %>
   <% end %>
  <% end %>
<div class="col-12 offset-md-1 mt-3">
 <%= link_to "全てのキャンプ場を見る>>", camp_places_path, style: "color: #494848;", class: "float-right" %>
</div>

