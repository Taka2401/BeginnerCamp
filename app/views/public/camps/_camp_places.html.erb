
<div class="row mt-5">
  <div class="col-lg-12 mt-2">
    <h3>キャンプ場一覧</h3>
  </div>
  <% camp_places.first(3).each do |camp_place| %>
    <% camp_place.post_images.each  do |post_image| %>
    <div class="d-flex flex-wrap mt-4">
      <div class="col-lg-4 camp__image">
        <%= link_to camp_place_path(camp_place), style: "color: #494848;" do %>
          <%= attachment_image_tag(post_image, :image, :fill, 150, 150, format: 'jpeg', class: "rounded") %> <br />
         <% end %>
        <div class="col-md-12">
          <%= camp_place.name %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-5 offset-md-2">
     <%= link_to "全てのキャンプ場を見る>>", camp_places_path, style: "color: #494848;", class: "float-right" %>
    </div>
  </div>