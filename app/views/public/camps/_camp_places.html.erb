<div class="camp-place-inner">
  <div class="col-12">
    <h3><i class="fab fa-firefox"></i> キャンプ場一覧</h3>
  </div>
  <% camp_places.first(3).each do |camp_place| %>
    <% camp_place.post_images.first(1).each  do |post_image| %>
      <div class="col-4 camp-content mt-3">
        <%= link_to camp_place_path(camp_place), class: "link-color" do %>
          <%= attachment_image_tag(post_image, :image, format: 'jpeg', size: "180x180", class: "rounded") %> <br />
          <div class="col-12 text-center mt-1">
            <%= camp_place.name %>
          </div>
        <%= render 'shared/camp_place_values', camp_place: camp_place %>
      </div>
    <% end %>
   <% end %>
  <% end %>
  <div class="col-12 offset-md-7 mt-3">
   <%= link_to "全てのキャンプ場を見る>>", camp_places_path, class: "link-color" %>
  </div>
</div>

