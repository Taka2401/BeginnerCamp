
<div class="row mt-5">
    <div class="col-lg-12 mt-2">
      <h3>キャンプ用品一覧</h3>
    </div>
    <div class="d-flex flex-wrap mt-4">
      <% camp_items.first(3).each do |camp_item| %>
        <div class="col-lg-4 camp__image">
          <%= link_to camp_item_path(camp_item), style: "color: #494848;" do %>
            <%= attachment_image_tag(camp_item, :image, :fill, 150, 150, format: 'jpeg', class: "rounded") %> <br />
            <div class="col-lg-4">
              <%= camp_item.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-5 offset-md-2">
     <%= link_to "全てのキャンプ用品を見る>>", camp_items_path, style: "color: #494848;", class: "float-right" %>
    </div>
  </div>