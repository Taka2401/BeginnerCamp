<div class="camp-item-inner mt-5">
  <div class="col-12 mt-2">
    <h3><i class="fas fa-campground"></i> キャンプ用品一覧</h3>
  </div>
    <% camp_items.first(3).each do |camp_item| %>
      <div class="col-4">
        <%= link_to camp_item_path(camp_item), class: "link-color" do %>
          <%= attachment_image_tag(camp_item, :image, format: 'jpeg', size: "180x180", class: "rounded") %> <br />
            <div class="col-12">
              <%= camp_item.name %>
            </div>
        <div class="row col-12 offset-md-1" id="star-rate2-<%= camp_item.id %>"></div>
        <script>
        $('#star-rate2-<%= camp_item.id %>').raty({
          size: 30,
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          half: true,
          readOnly: true,
          score: "<%= camp_item.camp_item_values.average(:rate).to_f.round(1) %>",
        });
        </script>
      </div>
      <% end %>
    <% end %>
  <div class="col-12 offset-md-7 mt-3">
    <%= link_to "全てのキャンプ用品を見る>>", camp_items_path, class: "link-color" %>
  </div>
</div>
