
<div class="row mt-2 ml-1">
  <h3><i class="fas fa-tags"></i> タグから探す</h3>
</div>
<div class="row mt-5">
  <% tags.each do |tag| %>
    <%= link_to tag_path(tag.id), class: "btn index-tags-btn" do %>
      <i class="fas fa-hashtag"></i> <%= tag.name %>
    <% end %>
  <% end %>
</div>
<div class="row offset-md-8 mt-3">
  <div class="col-12">
    <%= link_to "もっと見る>>", tags_path, style: "color: #494848;", class: "float-right" %>
  </div>
</div>




