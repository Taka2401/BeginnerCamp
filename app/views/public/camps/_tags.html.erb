<div class="row mt-2 ml-1">
  <h3><i class="fas fa-tags"></i> タグから探す</h3>
</div>
<div class="row">
  <% tags.each do |tag| %>
    <div class="row tag-box mt-2 ml-5">
      <%= link_to tag_path(tag.id), class: "link-color" do %>
        <i class="fas fa-hashtag"></i> <%= tag.name %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="row offset-md-9 mt-5">
  <div class="col-12">
    <%= link_to "もっと見る>>", tags_path, class: "float-right link-color" %>
  </div>
</div>




