
<div class="row offset-md-2 mt-5">
    <div class="col-lg-12 mt-2">
      <h3>最近の投稿</h3>
    </div>
    <div class="d-flex flex-wrap mt-4">
      <% @posts.first(3).each do |post| %>
        <div class="col-12">
          <%= link_to post_path(post), style: "color: #494848;" do %>
            <%= attachment_image_tag(post, :image, :fill, 150, 150, format: 'jpeg', class: "rounded") %> <br />
            <div class="col-12 mt-1">
              <%= post.title %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-5 offset-md-1">
     <%= link_to "もっと見る>>", posts_path, style: "color: #494848;", class: "float-right" %>
    </div>
  </div>