<% camp_place.post_images.first(1).each  do |post_image| %>
  <div class="col-4 camp-content mt-4 ml-2">
    <%= link_to camp_place_path(camp_place) do %>
      <%= attachment_image_tag(post_image, :image, format: 'jpeg', size: "190x190", class: "rounded") %> <br />
      <div class="col-12 text-center mt-1">
        <%= camp_place.name %>
      </div>
      <%= render 'shared/camp_place_values', camp_place: camp_place %>
    <% end %>
  </div>
<% end %>
