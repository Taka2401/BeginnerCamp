  <div class="row mt-5">
    <div class="col-md-10">
      <table class="table table-hover offset-md-1">
        <% users.each do |user| %>
          <tbody>
            <tr onclick='window.location="<%= user_path(user) %>"' role="link">
              <td>
                <%= attachment_image_tag(user, :profile_image, format: 'jpeg', fallback: "user_image.jpg", size:'50x50', class: "user-image") %>
              </td>
              <td><%= user.name %></td>
              <td>
                <%= link_to "#{user.followings.count} フォロー", following_user_path(user) %>
                <%= link_to "#{user.followers.count} フォロワー ", followers_user_path(user) %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
